

<% form_tag :controller => @app_name.downcase, :action => 'search' do %>
	School Type: <%= select_tag(:school_type, options_for_select([['High', 'H'], ['Middle', 'M'], ['Elementary', 'E']])) %><br /><br />
	City Name: <%= text_field_tag 'query', nil, {:size=>40} %> 
	<%= hidden_field_tag :search_type, @search_type %> 
	<%= submit_tag "Search" %>
<% end %>
